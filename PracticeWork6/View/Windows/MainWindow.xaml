<Window x:Class="PracticeWork6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeWork6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="first" Grid.Row="0" Margin="10" Text="{Binding Group}" Background="LightGray"/>
        <TextBox Text="{Binding NumberOfGroup}" Margin="10" Grid.Row="1" Background="LightGray"/>
        <Button x:Name="showButton" Command="{Binding ShowBtn}" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="25,30,0,30" Width="200">Показать!</Button>
        <TextBlock x:Name="Output" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="LightGray" Text="{Binding NameOfGroup}" Width="500" Margin="30,30,10,30"/>

    </Grid>
</Window>
